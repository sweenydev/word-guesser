{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "site": "wordplayer",
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 420
    },
    "hosting": {
      "port": 69
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
